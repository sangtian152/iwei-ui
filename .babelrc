{
  "presets": [[
    "@babel/preset-env", 
    {
      "loose": false,
      "modules": false,
      "useBuiltIns": "usage",
      "corejs": 3
    }
  ]],
  /* "plugins": [
    [
      "import",
      {
        "libraryName": "zmbl-ui",
        // "libraryDirectory": "lib",   // default: lib
        "style": true
      }
    ]
  ], */
  "env": {
    "development":{
      "presets": ["@vue/app"]
    },
    "utils": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "loose": true,
            "modules": "commonjs"
          }
        ]
      ],
      "plugins": [
        ["module-resolver", {
          "root": ["zmbl-ui"],
          "alias": {
            "zmbl-ui/src": "zmbl-ui/lib"
          }
        }]
      ]
    },
    "test": {
      "plugins": ["istanbul"]
    }
  }
}
